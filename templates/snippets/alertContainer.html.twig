{% import "snippets/alert.html.twig" as alertRenderer %}

<div id="alertContainer">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {{ alertRenderer.renderAlert(label, message) }}
        {% endfor %}
    {% endfor %}

    {% if alerts is defined and alerts is not empty %}
        {% for alert in alerts %}
            {{ alertRenderer.renderAlert(alert.type, alert.message) }}
        {% endfor %}
    {% endif %}
</div>